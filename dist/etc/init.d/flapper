#!/bin/bash
#
# flapper
#

PATH=$PATH:/sbin:/bin:/usr/sbin:/usr/bin:/usr/local:/usr/local/sbin:/usr/local/bin:/usr/lib/flapjack/bin

if [ ! $(which flapper) ]; then
  echo "Error: flapper isn't in PATH."
  echo "Refusing to do anything!"
  exit 1
fi

# Evaluate command
flapper $1

RETVAL=$?
exit $RETVAL

