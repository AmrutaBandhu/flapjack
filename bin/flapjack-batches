#!/usr/bin/env ruby

require 'rubygems'
require 'yajl'
require 'yajl/json_gem'

command = ARGV[0]

case command
when "import"
  puts "Created batch 1"
when "list"
  data = { "batches" =>
            [
              { "id" => 1, "checks" =>
                [
                "id"        => 1,
                "parent_id" => nil,
                "child_id"  => nil,
                "command"   => "exit 0"
                ]
              }
            ]
          }

  puts data.to_json
end

